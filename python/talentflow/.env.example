# TalentFlow Environment Configuration
# Copy this to .env and update values

# Django Settings
DJANGO_SETTINGS_MODULE=talentflow.settings.development
SECRET_KEY=your-secret-key-change-in-production
DEBUG="false"
ALLOWED_HOSTS=localhost,127.0.0.1

# Database Configuration
DATABASE_URL=postgres://talentflow:talentflow@localhost:5432/talentflow
DB_NAME=talentflow
DB_USER=talentflow
DB_PASSWORD=talentflow
DB_HOST=localhost
DB_PORT=5432

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_URL=redis://localhost:6379/0
CELERY_BROKER=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# OAuth2
OAUTH2_CLIENT_ID=talentflow-client
OAUTH2_CLIENT_SECRET=talentflow-secret
OAUTH2_REDIRECT_URI=http://localhost:8000/oauth/callback

# JWT
JWT_SECRET_KEY=your-jwt-secret-key
JWT_ACCESS_TOKEN_LIFETIME=300
JWT_REFRESH_TOKEN_LIFETIME=86400

# Celery
CELERY_TIMEZONE=America/New_York
CELERY_TASK_ALWAYS_EAGER=False
CELERY_WORKER_CONCURRENCY=4

# Docker Configuration
POSTGRES_HOST=db
POSTGRES_PORT=5432
POSTGRES_DB=talentflow
POSTGRES_USER=talentflow
POSTGRES_PASSWORD=talentflow

# Note: Use these when running with Docker Compose
# The service names (db, redis) are used as hostnames
